{
    "name": "islandora/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Islandora Foundation",
            "role": "Owner",
            "email": "community@islandora.ca"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "git@github.com:Islandora/islandora.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/islandora_defaults.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/controlled_access_terms.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/reference_value_pair.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/idc-ui-theme.git"
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/idc_ui_module.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jhu-idc/idc_migration"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jhu-idc/migrate_file"
        },
        {
            "type": "vcs",
            "url": "https://github.com/jhu-idc/idc_export.git"
        },
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/locales",
                "version":"1.0.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/citation-style-language/locales.git",
                    "reference": "master"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "citation-style-language/styles-distribution",
                "version":"1.0.0",
                "source": {
                    "type": "git",
                    "url": "https://github.com/citation-style-language/styles-distribution.git",
                    "reference": "master"
                }
            }
        }
    ],
    "require": {
        "php": ">=7.0.8",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6.5",
        "drupal/admin_toolbar": "^2.0",
        "drupal/auto_entitylabel": "^3.0@beta",
        "drupal/captcha": "^1.1",
        "drupal/console": "~1.0",
        "drupal/contact_ajax": "^1.5",
        "drupal/contact_block": "^1.5",
        "drupal/contact_emails": "^1.19",
        "drupal/contact_storage": "^1.1",
        "drupal/content_browser": "^1.0@alpha",
        "drupal/core": "^8.9.15",
        "drupal/core-composer-scaffold": "^8.9.15",
        "drupal/devel": "^2.0",
        "drupal/embed": "^1.4",
        "drupal/entity_reference_unpublished": "^1.2",
        "drupal/epp": "^1.0",
        "drupal/facets": "^1.3",
        "drupal/imagemagick": "^3",
        "drupal/libraries": "3.x-dev@dev",
        "drupal/migrate_source_ui": "^1.0@RC",
        "drupal/pager_serializer": "^1.0",
        "drupal/pdf": "1.x-dev",
        "drupal/rdfui": "^1.0-beta1",
        "drupal/rest_oai_pmh": "^1.0",
        "drupal/restui": "^1.16",
        "drupal/role_delegation": "^1.1",
        "drupal/role_hierarchy": "^2.2",
        "drupal/s3fs": "^3.0@alpha",
        "drupal/search_api_solr": "^4.1",
        "drupal/simplesamlphp_auth": "^3.2",
        "drupal/title_length": "^1.1",
        "drupal/transliterate_filenames": "^1.3",
        "drupal/views_data_export": "^1.0",
        "drupal/workbench": "^1.3",
        "drupal/workbench_access": "^1.0@beta",
        "drush/drush": "^9.7.1",
        "islandora-rdm/islandora_fits": "dev-master",
        "islandora/carapace": "dev-8.x-3.x",
        "jhu-idc/idc-ui-theme": "dev-develop",
        "jhu-idc/idc_export": "dev-main",
        "jhu-idc/idc_ui_module": "dev-main",
        "jhu-idc/islandora_defaults": "dev-8.x-1.x",
        "jhu-idc/migrate_file": "^1.1",
        "jhu_idc/idc_migration": "^1.0",
        "vlucas/phpdotenv": "^4.0",
        "webflo/drupal-finder": "^1.0.0",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "drupal/core-dev": "^8.8.1"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ],
        "files": [
            "load.environment.php"
        ]
    },
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "@composer drupal:scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patchLevel": {
            "drupal/core": "-p2"
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": {
            "simplesamlphp/simplesamlphp": {
                "SimpleSAMLphp config": "patches/simplesaml_config.patch"
            },
            "drupal/title_length": {
                "Node title length 1: Apply user config override": "patches/node_title_length_fix-hook-install.patch",
                "Node title length 2: Taxonomy name length": "patches/node_title_length_termNameCharLength-3041979-8.patch"
            },
            "islandora/islandora": {
                "Routing definitions": "patches/islandora.routing.yml.patch"
            }
        }
    }
}
