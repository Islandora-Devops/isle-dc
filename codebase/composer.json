{
    "name": "islandora/islandora-sandbox",
    "type": "project",
    "description": "Islandora project to deploy with demo install profile.",
    "repositories" : [
        {
            "type": "vcs",
            "url": "https://github.com/Islandora-Devops/islandora_base_theme.git",
            "no-api": true
        },
        {
            "type": "vcs",
            "url": "https://github.com/Islandora-Devops/islandora_starter_theme.git",
	        "no-api": true
        },
        {
            "type": "git",
            "url": "https://github.com/Islandora-Devops/islandora_install_profile_demo.git",
	        "no-api": true
        },
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mjordan/islandora_workbench_integration.git",
	        "no-api": true
        },
        {
            "type": "package",
            "package": {
                "name": "library/openseadragon",
                "version": "2.4.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/openseadragon/openseadragon/releases/download/v2.4.2/openseadragon-bin-2.4.2.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "library/pdf.js",
                "version": "2.4.456",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/mozilla/pdf.js/releases/download/v2.4.456/pdfjs-2.4.456-dist.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "library/masonry",
                "version": "3.3.2",
                "type": "drupal-library",
                "dist": {
                    "url": "https://github.com/desandro/masonry/archive/v3.3.2.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "vcs",
            "url": "git@github.com:jhu-idc/idc-ui-theme.git"
        }
    ],
    "authors": [
        {
            "name": "dannylamb",
            "email": "dlamb@islandora.ca"
        }
    ],
    "require": {
        "composer/installers": "^1.9",
        "drupal/core-composer-scaffold": "^9.2",
        "drupal/core-project-message": "^9.2",
        "drupal/core-recommended": "^9.2",
        "islandora/islandora_install_profile_demo": "dev-main",
        "library/pdf.js": "2.4.456",
        "symfony/string": "^5.4"
    },
    "require-dev": {
        "drupal/twig_xdebug": "^1.2"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "zaporylie/composer-drupal-optimizations": true,
            "wikimedia/composer-merge-plugin": true,
            "cweagans/composer-patches": true,
            "drupal/console-extend-plugin": true,
            "oomphinc/composer-installers-extender": true
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "drupal-core-project-message": {
            "include-keys": [
                "homepage",
                "support"
            ],
            "post-create-project-cmd-message": [
                "<bg=blue;fg=white>                                                         </>",
                "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
                "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
                "<bg=blue;fg=white>                                                         </>",
                "",
                "<bg=yellow;fg=black>Next steps</>:",
                "  * Install the site: https://www.drupal.org/docs/8/install",
                "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
                "  * Get support: https://www.drupal.org/support",
                "  * Get involved with the Drupal community:",
                "      https://www.drupal.org/getting-involved",
                "  * Remove the plugin that prints this message:",
                "      composer remove drupal/core-project-message"
            ]
        }
    }
}
